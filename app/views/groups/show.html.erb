<h1>Welcome to the <%= @group.name %> Group! </h1>
<% if @group.users.include? current_user %>
  <div>
    You are a member of this group. 
  </div>
  <div>
    <%= button_to "Leave Group", leave_group_path, method: :delete %>
  </div>
<% else %>
  <%= button_to "Join Group!", join_group_path(@group), method: :post %>
<% end %>

<h3>Group Members:</h3>
<ul>
  <% @group.users.each do |user| %>
  <div>
    <li><%= user.email %></li>
  </div>
  <% end %>
</ul>

<h3>Group Images:</h3>
<% @group.images.each do |image| %>
  <%= image_tag image.url %>
<% end %>

<h4><%= button_to "Delete Group", @group, method: :delete %></h4>
<h4><%= link_to "Go back to Group Homepage", groups_path %></h4>
