<%= form_for ([gallery, image]) do |form| %>
  <%= render "application/form_errors", object: image %>

  <div>
    <%= form.label :name, "Image Name:" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description, "Description:" %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :url, "URL:" %>
    <%= form.text_field :url %>
  </div>
  <div>
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list %>
  </div>
  <div>
    <%= form.collection_check_boxes :group_ids, current_user.groups, :id, :name %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
